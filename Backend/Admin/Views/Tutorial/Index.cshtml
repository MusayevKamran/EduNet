@model AppAdmin.Models.ArticleIndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@foreach (var item in Model.ArticleDetailModel.ToList())
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">Row</th>
                <th scope="col">CreatedDate</th>
                <th scope="col">UpdateDate</th>
                <th scope="col">Edit</th>
                <th scope="col">Details</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>@item.Row</td>
                <td>@item.CreatedDate</td>
                <td>@item.UpdateDate</td>
                <td><a class="btn btn-primary btn-block" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                <td><a class="btn btn-info btn-block" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                <td><a class="btn btn-danger btn-block" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>

            </tr>
        </tbody>
    </table>
}
